<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VerificaApp.CustomControls.FlyoutHeader">
    <VerticalStackLayout BackgroundColor="White"
                  HeightRequest="200">
        <Image Aspect="AspectFit"
                       Source="logo.png"
                       HeightRequest="100"/>
        <Label Text="GobCan Verifica"
                       TextColor="{StaticResource Frame_Backcolor}"
                       FontAttributes="Bold"
                       FontSize="Medium"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center" />
        <Label x:Name="labelUserName"
                       TextColor="{StaticResource Frame_Backcolor}"
                       FontAttributes="Bold"
                       FontSize="Medium"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
               Margin="0,10,0,10"></Label>
        <Line BackgroundColor="{StaticResource Frame_Backcolor}"></Line>
    </VerticalStackLayout>
</ContentView>
